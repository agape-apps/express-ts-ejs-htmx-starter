{
  "name": "express-ts-ejs-htmx",
  "version": "1.0.0",
  "main": "src/app.ts",
  "license": "MIT",
  "scripts": {
    "build:js": "esbuild src/frontend/main.js --bundle --minify --sourcemap --outfile=src/static/app.js",
    "build:css": "bunx tailwindcss -i ./src/frontend/styles.css -o ./src/static/app.css --minify",
    "build": "bun run build:js && bun run build:css",
    "watch:js": "esbuild src/frontend/main.js --bundle --sourcemap --outfile=src/static/app.js --watch",
    "watch:css": "bunx tailwindcss -i ./src/frontend/styles.css -o ./src/static/app.css --watch",
    "watch": "concurrently \"bun run watch:js\" \"bun run watch:css\"",
    "dev": "nodemon --watch src --ext ts,js,json,ejs --exec ts-node --transpile-only src/app.ts",
    "start": "bun run build && bun run dev"
  },
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.5",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.12",
    "alpinejs": "^3.14.9",
    "concurrently": "^9.1.2",
    "daisyui": "^5.0.35",
    "esbuild": "^0.25.4",
    "htmx.org": "^1.9.12",
    "nodemon": "^3.1.10",
    "tailwindcss": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "nodemonConfig": {
    "ext": "js,ts,json,ejs"
  }
}
